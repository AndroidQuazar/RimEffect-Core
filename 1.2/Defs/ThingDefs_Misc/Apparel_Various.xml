  <ThingDef ParentName="ArmorMachineableBase">
   <defName>RE_Apparel_LightAllianceArmor</defName>
    <label>light alliance armor</label>
    <description>A light suit of full body armor, often used by front line alliance infantry.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>RE_AllianceArmoury</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>RE_ManufacturingBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/LightAllianceArmor/LightAllianceArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <tradeTags>
      <li>RE_AllianceArmoury</li>
    </tradeTags>
    <statBases>
      <WorkToMake>48000</WorkToMake>
      <MaxHitPoints>280</MaxHitPoints>
      <Mass>9</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>36</Insulation_Cold>
      <Insulation_Heat>12</Insulation_Heat>
      <EquipDelay>11</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <Plasteel>100</Plasteel>
      <Uranium>15</Uranium>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/LightAllianceArmor/LightAllianceArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>RE_AllianceArmoury</li>
      </tags>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RE_AllianceReward</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_BiocodableApparel"/>
    </comps>
  </ThingDef>
  
