  <ThingDef>
    <defName>RE_Apparel_SpectreVisor</defName>
    <label>spectre visor</label>
    <description>A targeting computer that helps the user aim. It detects and analyzes targets using infrared, visible, and millimeter-wave electromagnetic sensors. An onboard targeting computer displays firing solutions on a retinal projection. It offers no protection at all.</description>
    <graphicData>
      <texPath>Things/Apparel/SpectreArmor/SpectreVisor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Ultra</techLevel>
    <generateCommonality>2</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
	  <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>Things/Apparel/SpectreArmor/SpectreVisor</wornGraphicPath>
      <tags>
        <li>RE_SpectreArmoury</li>
      </tags>
    </apparel>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>5</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-3</Beauty>
	  <Mass>0.2</Mass>
      <ArmorRating_Sharp>0</ArmorRating_Sharp>
      <ArmorRating_Blunt>0</ArmorRating_Blunt>
      <ArmorRating_Heat>0</ArmorRating_Heat>
      <Insulation_Cold>0</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
    </statBases>
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>14</pathCost>
    <useHitPoints>True</useHitPoints>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>ArmorHeadgear</li>
    </thingCategories>
    <tradeTags>
      <li>RE_SpectreArmor</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>RE_SpectreArmoury</li>
    </thingSetMakerTags>
    <comps>
	  <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_BiocodableApparel"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="RimEffect.CompProperties_AbilitiesApparel">
        <abilities>
          <li>RE_SpectreArmor_CombatMastery</li>
        </abilities>
      </li>
    </comps>
  </ThingDef>
  
</Defs>