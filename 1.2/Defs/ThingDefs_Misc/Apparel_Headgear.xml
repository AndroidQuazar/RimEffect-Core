<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>RE_Apparel_ArmorHelmetRecon</defName>
    <label>light alliance helmet</label>
    <description>A high-tech armored helmet, often used by front line alliance infantry.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>RE_AllianceArmoury</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>RE_ManufacturingBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/LightAllianceArmor/LightAllianceHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <tradeTags>
      <li>RE_AllianceArmoury</li>
    </tradeTags>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>1</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>6</Insulation_Cold>
      <Insulation_Heat>4</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>40</Plasteel>
    </costList>
    <apparel>
      <tags>
        <li>RE_AllianceArmoury</li>
      </tags>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/LightAllianceArmor/LightAllianceHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
	  <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
      </options>
    </colorGenerator>
    <thingSetMakerTags>
      <li>RE_AllianceArmoury</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_BiocodableApparel"/>
    </comps>
  </ThingDef>
  
