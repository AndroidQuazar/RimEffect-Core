<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ScenarioDef Name="VFE_TheLoneScavenger">
    <defName>RE_AllianceColony</defName>
    <label>Alliance colony</label>
    <description>You have been chosen to found a new Alliance colony.</description>
    <scenario>
      <summary>A group of Alliance colonists with starting resources.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>RE_AlliancePlayerColony</factionDef>
      </playerFaction>
      <parts>
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>3</pawnCount>
          <pawnChoiceCount>8</pawnChoiceCount>
        </li>
        <li Class="ScenPart_PlayerPawnsArriveMethod">
          <def>PlayerPawnsArriveMethod</def>
          <method>DropPods</method>
          <visible>false</visible>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentIndustrial</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentSpacer</thingDef>
          <count>14</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RE_PrefabComponent</thingDef>
          <count>100</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MealSurvivalPack</thingDef>
          <count>30</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>MedicineUltratech</thingDef>
          <count>20</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Plasteel</thingDef>
          <count>100</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Steel</thingDef>
          <count>500</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RE_Gun_AllianceBattleRifle</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RE_Gun_AlliancePistol</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RE_Apparel_LightAllianceArmor</thingDef>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>RE_Apparel_LightAllianceHelmet</thingDef>
        </li>
        <li Class="ScenPart_ScatterThingsNearPlayerStart">
          <def>ScatterThingsNearPlayerStart</def>
          <thingDef>WoodLog</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_GameStartDialog">
          <def>GameStartDialog</def>
          <text>You have been chosen to found a new Alliance colony. Are you capable of founding a thriving colony or will you perish in this outlying world?</text>
          <closeSound>GameStartSting</closeSound>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>
</Defs>
