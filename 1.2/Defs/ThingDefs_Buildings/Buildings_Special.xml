<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RE_AllianceTerminal</defName>
    <label>alliance terminal</label>
    <description>A research bench module that unlocks alliance technologies. Can be given as a quest reward by the Alliance faction.</description>
    <graphicData>
      <texPath>Things/Building/Special/AlianceTerminal</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
    <uiIconScale>0.85</uiIconScale>
    <size>(1,1)</size>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.2</fillPercent>
	<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
	<designationCategory>Misc</designationCategory>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <statBases>
	  <MarketValue>1500</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>0</Flammability>
	  <Beauty>0</Beauty>
    </statBases>
    <costList>
      <Plasteel>50</Plasteel>
      <ComponentSpacer>8</ComponentSpacer>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.05</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
	<tradeability>Sellable</tradeability>
    <researchPrerequisites>
      <li>RE_AllianceCooperation</li>
    </researchPrerequisites>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
  </ThingDef>
  
</Defs>